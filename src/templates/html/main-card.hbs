<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reddit Card - {{title_zh}}</title>
    <link rel="stylesheet" href="../css/base.css">
    <style>
        body {
            margin: 0;
            padding: 20px;
            background: #f0f2f5;
            display: flex;
            align-items: flex-start;  /* 改为顶部对齐 */
            justify-content: center;
            min-height: auto;         /* 改为自动高度 */
        }
    </style>
</head>
<body>
    <div class="card main-card">
        <!-- Header -->
        <div class="header">
            <div class="reddit-icon">R</div>
            <div class="header-text">
                <div class="header-title">Reddit 高赞讨论</div>
                <div class="header-subtitle">r/{{subreddit}}</div>
            </div>
        </div>

        <!-- Content -->
        <div class="content">
            <!-- Title Section -->
            <div class="title-section">
                {{#if title_zh}}
                <h1 class="title-chinese">{{title_zh}}</h1>
                {{/if}}
                {{#if title}}
                <div class="title-original">
                    <strong>原文标题：</strong>{{title}}
                </div>
                {{/if}}
            </div>

            <!-- Main Content -->
            <div class="main-content">
                {{#if content_zh}}
                <div class="content-block content-zh">
                    {{#each content_zh_paragraphs}}
                    <p>{{this}}</p>
                    {{/each}}
                </div>
                {{/if}}
                {{#if content}}
                <div class="content-block content-en">
                    <h4 class="original-text-title">原文</h4>
                    {{#each content_paragraphs}}
                    <p>{{this}}</p>
                    {{/each}}
                </div>
                {{/if}}
            </div>
        </div>

        <!-- Footer -->
        <div class="footer">
            <div class="upvote-section">
                <div class="upvote-button">
                    <span class="upvote-icon">▲</span>
                    <span>{{formatNumber ups}} 赞</span>
                </div>
            </div>
            {{#if totalPages}}
            <div class="page-number">
                {{pageNumber}} / {{totalPages}}
            </div>
            {{/if}}
        </div>
    </div>
</body>
</html>
